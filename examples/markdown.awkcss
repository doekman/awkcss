BEGIN {
	width(84); # Maximum line length 120 positions
	margin(1, 2);
}
/^#+ / {			#headings
	color("yellow");
	font_weight("bold");
	width(); # No max line length
}
/^# / {				#h1 heading
	background_color("blue");
}
/^## / {			#h2 heading
	text_decoration("underline");
}
/^\t| {4,}/ {		#code block
	#text_decoration(blink);
	color("gray");
	white_space("pre");
	text_overflow("ellipsis");
}
